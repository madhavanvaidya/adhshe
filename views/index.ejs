  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Destroy existing charts if they exist
      if (window.moodChart && typeof window.moodChart.destroy === 'function') {
        window.moodChart.destroy();
      }
      if (window.tasksProgressChart && typeof window.tasksProgressChart.destroy === 'function') {
        window.tasksProgressChart.destroy();
      }
  
      // Assuming moodData, totalTasks, and completedTasks are passed from the server and available here
      const moodData = <%- JSON.stringify(moodData) %>;
      const totalTasks = <%= totalTasks %>;
      const completedTasks = <%= completedTasks %>;
      const uncompletedTasks = totalTasks - completedTasks;
  
      // Map mood selections to numerical values
      const moodMap = {
        "Very Unpleasant": 1,
        "Unpleasant": 2,
        "Slightly Unpleasant": 3,
        "Neutral": 4,
        "Slightly Pleasant": 5,
        "Pleasant": 6,
        "Very Pleasant": 7
      };
  
      const dates = moodData.map(entry => new Date(entry.date).toLocaleDateString());
      const moods = moodData.map(entry => moodMap[entry.mood]);
  
      // Create the mood chart
      const moodCtx = document.getElementById('moodChart').getContext('2d');
      window.moodChart = new Chart(moodCtx, {
        type: 'line',
        data: {
          labels: dates,
          datasets: [{
            label: 'Mood',
            data: moods,
            borderColor: 'rgba(75, 192, 192, 1)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            fill: true,
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
              min: 1,
              max: 7,
              ticks: {
                callback: function(value) {
                  return Object.keys(moodMap).find(key => moodMap[key] === value);
                }
              }
            }
          }
        }
      });
  
      // Create the tasks progress chart with blue accents and aligned legend
      const tasksCtx = document.getElementById('tasksProgressChart').getContext('2d');
      window.tasksProgressChart = new Chart(tasksCtx, {
        type: 'doughnut',
        data: {
          labels: ['Completed Tasks', 'Uncompleted Tasks'],
          datasets: [{
            data: [completedTasks, uncompletedTasks],
            backgroundColor: ['#007bff', '#6c757d'],
            hoverBackgroundColor: ['#0056b3', '#5a6268'],
            borderColor: ['#ffffff', '#ffffff'],
            borderWidth: 2,
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: true,
              position: 'right',
              align: 'start',
              labels: {
                boxWidth: 20,
                padding: 15,
                color: '#007bff'
              }
            },
            tooltip: {
              callbacks: {
                label: function(tooltipItem) {
                  const total = completedTasks + uncompletedTasks;
                  const percentage = ((tooltipItem.raw / total) * 100).toFixed(2);
                  return `${tooltipItem.label}: ${tooltipItem.raw} (${percentage}%)`;
                }
              }
            }
          }
        }
      });
    });
  </script>



 
 
