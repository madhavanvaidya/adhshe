<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menstrual Tracker</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Menstrual Tracker</h1>
        <form id="tracker-form">
            <label for="start-date">Start Date:</label>
            <input type="date" id="start-date" name="startDate" required>
            
            <label for="cycle-length">Cycle Length (days):</label>
            <input type="number" id="cycle-length" name="cycleLength" required>
            
            <button type="submit">Track</button>
        </form>
        
        <div id="result">
            <% if (typeof nextPeriodDate !== 'undefined') { %>
                <p>Your next period is expected to start on: <strong><%= nextPeriodDate %></strong></p>
            <% } %>
            
            <% if (typeof error !== 'undefined') { %>
                <p style="color: red;"><%= error %></p>
            <% } %>
        </div>

        <ul id="cycle-list"></ul>
        <p id="average-cycle-length"></p>
        <p id="next-period-date"></p>
    </div>

    <script src="/scripts/tracker.js"></script>
</body>
</html>

