  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('menstrual-cycle-form');
      const startDateInput = document.getElementById('start-date');
      const cycleLengthInput = document.getElementById('cycle-length');
      const symptomsInput = document.getElementById('symptoms');
      const moodInput = document.getElementById('mood');
      const list = document.getElementById('menstrual-cycle-list');

      // Fetch and display menstrual cycles
      async function fetchCycles() {
        try {
          const response = await fetch('/api/menstrual-cycles');
          const cycles = await response.json();
          list.innerHTML = '';
          cycles.forEach(cycle => {
            const listItem = document.createElement('li');
            listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
            listItem.innerHTML = `
              Start Date: ${new Date(cycle.startDate).toLocaleDateString()}<br>
              Cycle Length: ${cycle.cycleLength} days<br>
              Symptoms: ${cycle.symptoms.join(', ')}<br>
              Mood: ${cycle.mood}
            `;
            listItem.dataset.id = cycle._id;
            const deleteButton = document.createElement('button');
            deleteButton.className = 'btn btn-danger btn-sm';
            deleteButton.textContent = 'Delete';
            deleteButton.addEventListener('click', () => deleteCycle(cycle._id));
            const buttonGroup = document.createElement('div');
            buttonGroup.appendChild(deleteButton);
            listItem.appendChild(buttonGroup);
            list.appendChild(listItem);
          });
        } catch (error) {
          console.error('Error fetching cycles:', error);
        }
      }

      // Add a new menstrual cycle
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const startDate = startDateInput.value;
        const cycleLength = cycleLengthInput.value;
        const symptoms = symptomsInput.value.split(',').map(s => s.trim());
        const mood = moodInput.value;
        try {
          const response = await fetch('/api/menstrual-cycles', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ startDate, cycleLength, symptoms, mood })
          });
          if (response.ok) {
            fetchCycles();
            form.reset();
            showToast('Cycle added successfully', 'success');
          } else {
            console.error('Error adding cycle:', await response.json());
          }
        } catch (error) {
          console.error('Error adding cycle:', error);
        }
      });

      // Delete a menstrual cycle
      async function deleteCycle(id) {
        try {
          const response = await fetch(`/api/menstrual-cycles/${id}`, {
            method: 'DELETE'
          });
          if (response.ok) {
            fetchCycles();
            showToast('Cycle deleted', 'error');
          } else {
            console.error('Error deleting cycle:', await response.json());
          }
        } catch (error) {
          console.error('Error deleting cycle:', error);
        }
      }

      function showToast(message, type) {
        toastr[type](message);
      }

      fetchCycles();
    });
  </script>
