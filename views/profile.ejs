  <script src="../assets/vendor/libs/apex-charts/apexcharts.js"></script>

  <!-- Main JS -->
  <script src="../assets/js/main.js"></script>

  <!-- Page JS -->
  <script src="../assets/js/dashboards-analytics.js"></script>

  <!-- Place this tag in your head or just before your close body tag. -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <script>
    $(document).ready(function() {
        $('#formAccountSettings').on('submit', function(event) {
            event.preventDefault();

            $.ajax({
                type: 'POST',
                url: '/api/update_profile',
                data: $(this).serialize(),
                success: function(response) {
                    toastr.success('Profile updated successfully');
                },
                error: function(error) {
                    toastr.error('An error occurred while updating the profile');
                }
            });
        });
        
    });
</script>
<script>
  $(document).ready(function() {
    // Handle form submission
    $('#confirmDeactivationForm').on('submit', function(event) {
      event.preventDefault(); // Prevent default form submission

      // AJAX request to handle account deletion
      $.ajax({
        type: 'POST',
        url: '/api/delete_account',
        success: function(response) {
          toastr.success('Account deleted successfully');
          // Redirect to login page after successful deletion
          window.location.href = '/login'; // Replace with your actual login page URL
        },
        error: function(error) {
          toastr.error('An error occurred while deactivating your account');
        }
      });
    });
  });
</script>

