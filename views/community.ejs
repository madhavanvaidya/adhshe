  <script>
    // Client-side JavaScript to fetch and display discussions
    document.addEventListener('DOMContentLoaded', async function() {
  try {
    const response = await fetch('/api/discussions/fetch');
    if (!response.ok) {
      throw new Error('Failed to fetch discussions');
    }
    const discussions = await response.json();

    const discussionThreads = document.getElementById('discussion-threads');

    discussions.forEach(discussion => {
      const discussionHTML = `
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/api/discussions/discussionDetails/${discussion._id}">
                ${discussion.title}
              </a>, 
              created by ${discussion.createdBy.firstname}
            </h5>
            <p class="card-text">${discussion.content}</p>
          </div>
        </div>`;
      
      discussionThreads.insertAdjacentHTML('beforeend', discussionHTML);
    });
  } catch (err) {
    console.error('Error fetching discussions:', err);
  }
});

</script>
